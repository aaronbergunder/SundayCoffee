<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-3">
      <% if @person.name %>
        <h4>Hey, <%= @person.name + '!' %></h4>
      <% else %>
        <div class="tile">
        Name<br>
          <%= f.text_field :name, :class => "form-control" %><br>
          You going to be at coffee this week?
        </div>
      <% end %>
    </div>
  
    <div class="col-sm-3">
      <div class="tile">
        <%= f.label "Avatar" %><br>
        <% if @person.avatar %>
          <%= image_tag @person.avatar_url(:thumb), :class => "thumbs" %>
        <% end %>
        <br>
        <%= f.file_field :avatar, accept: 'image/png,image/gif,image/jpeg' %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="tile">
        <%= f.label "Attending" %><br>
        <%= f.radio_button :attending , "1" %> Wouldn't miss it!<br>
        <%= f.radio_button :attending , "0" %> Sadly, no.
      </div>
    </div>
    <div class="col-sm-3">
      <div class="tile">
        <%= f.label "Reason" %><br>
        <%= f.text_field :comment, :class => "form-control" %>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
  </div>
<% end %>