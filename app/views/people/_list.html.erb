<div class="row">
      <div class="three columns right">
        <% if person.email %>
          <%= image_tag person.gravatar_url, :class => "thumbs" %>
        <% else %>
          <%= image_tag '/images/pencil.png' %>
          <%= person.email %> 
        <% end %>
      </div>
      <div class="three columns">
        <h4><%= person.name %></h4>
      </div>
      <div class="eight columns">
        <%= person.comment.blank? ? "&nbsp;".html_safe : person.comment %>
      </div>
      <div class="two columns right edit">
        <%= link_to 'edit status', edit_person_path(person) %>
      </div>
      
    </div>