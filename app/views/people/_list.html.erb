<div class="eight columns no-padding">
  <div class="two columns">
    <% if person.email %>
      <%= image_tag person.gravatar_url, :class => "thumbs" %>
    <% else %>
      <%= image_tag '/images/pencil.png' %>
      <%= person.email %> 
    <% end %>
  </div>
  <div class="two columns">
    <h4><%= link_to person.name, edit_person_path(person) %></h4>
  </div>
  <div class="four columns">
    <%= person.comment.blank? ? "&nbsp;".html_safe : person.comment %>
  </div>
</div>