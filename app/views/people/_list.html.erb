<div class="row">
      <div class="three columns">
        <%= image_tag person.avatar_url(:thumb), :class => "thumbs" %>
      </div>
      <div class="three columns">
        <h4><%= person.name %></h4>
      </div>
      <div class="eight columns">
        <%= person.comment %>
      </div>
      <div class="two columns right">
        <%= link_to (image_tag '/images/pencil.png', :class => "edit"), edit_person_path(person) %>
      </div>
      
    </div>