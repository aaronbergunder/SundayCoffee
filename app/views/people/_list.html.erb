<div class="row">
      <div class="col-sm-1 col-sm-offset-1">
        <%= image_tag person.avatar_url(:thumb), :class => "thumbs" %>
      </div>
      <div class="col-sm-2">
        <%= person.name %>
      </div>
      <div class="col-sm-2">
        <span class="flat-purple">Why?</span> <%= person.comment %>
      </div>
      <div class="col-sm-1 col-sm-offset-5">
        <%= link_to (image_tag '/images/pencil.png', :class => "edit"), edit_person_path(person) %>
      </div>
      
    </div>
    <hr>