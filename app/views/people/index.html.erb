<div class="col-sm-12">
  <h1 class="helvetica">Coffee Sunday?</h1>
  <h6 class="helvetica underdate"><% @sunday = Date.new %>
  <% @sunday = Time.now.end_of_week %>
  <%= @sunday.strftime("%B %d, %Y") %></h6>

</div>

<div class="col-sm-12">
  <h6 class="flat-green">Gonna be there</h6>
</div>

<% @people.each do |person| %>
  <% if person.attending? %> 
    <%= render 'list' , :person => person %>
  <% end %>
<% end %>


<div class="col-sm-12">
  <h6 class="flat-red">Not gonna be there</h6>
</div>

<% @people.each do |person| %>
  <% if !person.attending? %> 
    <%= render 'list' , :person => person %>
  <% end %>
<% end %>

<br>
<div class="add-person helvetica"><%= link_to (image_tag '/images/add.png', :alt=>"Add a new friend!", :class => 'edit'), new_person_path %>Add a guest</div>

